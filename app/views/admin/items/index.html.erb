  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧</h2>

      <div class="text-right">
          <%= link_to "新規登録" ,new_admin_item_path, class:"btn btn-lg btn-success" %>
      </div>

        <table class="table">
          <thead>
            <tr>
              <th>商品id</th>
              <th>商品名</th></th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to admin_item_path(item) do %>
                <%= item.name %>
                <% end %></td>
                <td><%= item.price.to_s(:delimited) %></td>
                <td><%= item.genre.name %></td>
                <td><% if item.is_active %>
                販売中
                <% else %>
                販売停止中
                <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>