  <div class="container">
    <div class="row">
      <div class="col-md-5 col-xs-5">
    <h3>商品新規登録</h3>

      <%=form_with model: @item,url: admin_items_path, method: :post do |f| %>

  <table class=table-borderess>

      <tr>
        <td><%= f.label :"商品画像" %></td>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>

      <tr>
        <td><%= f.label :"商品名" %></td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td><%= f.label :"商品説明" %></td>
        <td><%= f.text_area :introduction %></td>
      </tr>

      <tr>
        <td><%= f.label :"ジャンル" %></td>
        <td><%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "選択してください"} %></td>
      </tr>

      <tr>
        <td><%= f.label :"税抜価格" %></td>
        <td><%= f.text_field :price %>円</td>
      </tr>

      <tr>
        <td><%= f.label :"販売ステータス" %></td>
        <td><%= f.radio_button :is_active, :true %>販売中
            <%= f.radio_button :is_active, :false %>販売停止中</td>
      </tr>

  </table>


<%= f.submit "新規登録", class: "btn btn-success" %>


<% end %>