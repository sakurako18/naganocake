  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">


      <%=form_with model: @item, url: admin_item_path do |f| %>

    <div class="col-xs-5">
     <h2>商品編集</h2>

    </div>

    <br><br><br>
      <div class="col-xs-5 col-xs-offset-2">
        <table class="edit-form-table">
          <tbody>

            <tr>
              <th>商品画像
              </th>
                <td>
                  <%= f.file_field :image, accept: "image/*" %>
                </td>
            </tr>

            <tr>
              <th>商品名
              </th>
              <td><%= f.text_field :name %>
              </td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction %>
              </td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td>
                <%= f.collection_select :genre_id, @genres, :id, :name, {prompt: "選択してください"} %>
              </td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>
                <%= f.text_area :price %>
              </td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.radio_button :is_active, :true %>販売中
                  <%= f.radio_button :is_active, :false %>販売停止中
              </td>
            </tr>
          </tbody>
        </table>

        <div class="text-right">
        <%= f.submit "変更を保存" ,class: "btn btn-primary text-right" %>
        </div>
        </div>
        <% end %>
    </div>
  </div>
</div>