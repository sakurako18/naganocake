<div class="container">
  <div class="row">
    <div class="col-md-5 col-xl-5">
    <h2><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2><br>
    </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>
          会員ID
        </th>
          <td>
            <%= @customer.id %>
          </td>
      </tr>
      <tr>
        <th>
          氏名
        </th>
          <td>
            <%= @customer.last_name + @customer.first_name %>
          </td>
      </tr>
      <tr>
        <th>
          フリガナ
        </th>
          <td>
            <%= @customer.last_name_kana + @customer.first_name_kana %>
          </td>
      </tr>
      <tr>
        <th>
          郵便番号
        </th>
          <td>
            <%= @customer.postal_code %>
          </td>
      </tr>
      <tr>
        <th>
          住所
        </th>
          <td>
            <%= @customer.address %>
          </td>
      </tr>
      <tr>
        <th>
          電話番号
        </th>
          <td>
            <%= @customer.telephone_number %>
          </td>
      </tr>
      <tr>
        <th>
          メールアドレス
        </th>
          <td>
            <%= @customer.email %>
          </td>
      </tr>
      <tr>
        <th>
          ステータス
        </th>
          <td>
            <% if @customer.is_deleted == false %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
      </tr>
    </thead>
  </table>

  <div class="col-md-offset-1 col-md-2 text-center">
    <%= link_to  "編集する", edit_admin_customer_path, class: "btn btn-success" %>

    <%= link_to  "注文履歴一覧を見る", admin_path, class: "btn btn-primary" %>
  </div>

  </div>
  </div>