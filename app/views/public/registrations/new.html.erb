<div class="container">
  <div class="row">
      <div class="col-xs-9 col-xs-offset-1">
          <h3>新規会員登録</h5>

  <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


  <table class=table-borderess>
    <tr>
      <th>
        名前
      </th>
        <td>
          <div class="field">
            <%= f.label :"(姓)" %>
          </div>
        </td>
        <td>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
        </td>
        <td>
          <div class="field">
            <%= f.label :"(名)" %>
          </div>
        </td>
        <td>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </td>
     </tr>

    <tr>
      <th>
        フリガナ
      </th>
        <td>
          <div class="field">
          <%= f.label :"(セイ)" %>
          </div>
        </td>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
        </td>
        <td>
          <div class="field">
          <%= f.label :"(メイ)" %>
          </div>
          </td>
          <td>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        </td>
    </tr>

    <tr>
      <th>
        メールアドレス
      </th>
        <td>
        </td>
        <td>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </td>
    </tr>

    <tr>
      <th>
        郵便番号(ハイフンなし)
      </th>
        <td>
        </td>
        <td>
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </td>
    </tr>

    <tr>
      <th>
        住所
      </th>
        <td>
        </td>
        <td>
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </td>
    </tr>


    <tr>
      <th>
        電話番号
      </th>
        <td>
        </td>
        <td>
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </td>
    </tr>


    <tr>
      <th>
        <div class="field">
          <% if @minimum_password_length %>
          <em>パスワード(<%= @minimum_password_length %> 文字以上) </em>
          <% end %>
        </div>
      </th>
        <td>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
    </tr>

    <tr>
      <th>
        <div class="field">
          <%= f.label :"パスワード(確認用)" %><br />
        </div>
      </th>
        <td>
        </td>
        <td>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </td>
    </tr>

    <tr>
      <th>

      </th>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>
        </td>
    </tr>
  </table>
  <% end %>

  <h5>既に登録済みの方</h5>

  <%= link_to 'こちら', new_admin_session_path, style: "font-family: HiraMinPro-W6; color: #000000; margin: 30px 0;" %>  からログインしてください。

