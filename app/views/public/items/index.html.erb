<div class="container">
  <div class="row">
  <h2>商品一覧</h2>(全<%= @items.count %>件)

  <div class="row">

      <% @items.each do |item| %>

    <div class="col-3">
      <%= link_to public_item_path(item.id) do %>
      <%= image_tag item.get_image, size: '200x200' %>
      <% end %>
      <div></div>
      <%= item.name %>
      <div></div>
    ￥<%= item.price.to_s(:delimited, delimiter: ',') %>
    </div>
        <% end %>

  </div>
</div>


