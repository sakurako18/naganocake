  <div class="container">
    <div class="row">


    <div class="col-lg-4">
      <%= image_tag @item.image, size:"300x300", fallback: 'no_image.jpg' %>
    </div>
    <div class="col-lg-8">
      <h2><%= @item.name %></h2>
      <h5><%= @item.introduction %></h5>

      <h2>￥<%= ((@item.price.*1.1).floor).to_s(:delimited)%></h2>(税込)

      <div class="col-md-offset-1 col-md-2 text-center">
        <%=form_with model: @cart_item, url:  public_cart_items_path, method: :post do |f| %>
        <%= f.hidden_field :item_id, value: @item.id %>
        <%= f.select :amount, *[1..9], {prompt: "個数選択"} %>
        <%= f.submit "カートに入れる" , class:"btn btn-lg btn-success" %>
        <% end %>
      </div>
    </div>
  </div>