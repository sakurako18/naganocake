<div class="continer">
  <div class="row">
    <div>
      <strong class="information-link"><h3>注文情報確認</h3></strong>
    </div>
      
        <table class="table table-bordered col-md-8" >
        <thead>
          <tr>
            <th class="col-md-5">商品名</th>
            <th class="col-md-1">単価（税込）</th>
            <th class="col-md-1">数量</th>
            <th class="col-md-1">小計</th>
          </tr>
        </thead>

<tr class="center">
        <tbody>
          <% @cart_items.each do |cart_item| %>

          <tr>
            <td class="col-md-3">
              <%= cart_item.item.name %>
            </td>
            <td class="col-md-1">
              ￥<%= ((cart_item.item.price * 1.1).floor).to_s(:delimited, delimiter: ',') %>
            </td>
            <td class="col-md-1">
              <%= cart_item.amount %>
              </td>
            <td class="col-md-1">
              <%= (cart_item.item.price * 1.1).floor * cart_item.amount %>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>

        <table class="table  table-bordered table-condensed">
            <tr>
              <th class="info">配送料</th>
              <td class="col-xs-5">
                ¥<%= @order.postage.to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
            <tr>
              <th class="info">商品合計</th>
              <td class="col-xs-5">
                ¥<%= (@order.total_payment - @order.postage).to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
            <tr>
              <th class="info">ご請求金額</th>
              <td class="col-xs-5">
                ¥<%= @order.total_payment.to_s(:delimited, delimiter: ',') %>
              </td>
            </tr>
        </table>


  <div class = "col-xs-4 col-xs-offset-4">
    <span>
      <%= link_to "注文を確定する", root_path, class: "col-xs-12 btn btn-success"%>
    </span>
  </div>

    </div>
  </div>
</div>