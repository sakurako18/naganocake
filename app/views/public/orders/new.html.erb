  <%= f.radio_button :address_radio_button, 2 %>
  <%= f.label :address_new_address, "新しいお届け先" %>
  郵便番号<%= f.text_area :postal_code %>
  住所<%= f.text_area :address %>
  宛先<%= f.text_area :name %>
<p></p>

    <%= f.submit "確認画面へ進む" ,class: "btn btn-primary text-right" %>
<p></p>

<% end %>

