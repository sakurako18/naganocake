<%= form_with model: @order, url: public_orders_confirm_path do |f| %>


  <strong>支払い方法</strong>

  <%= f.radio_button :payment, "credit_card" %>
  <%= f.label :payment_credit_card, "クレジットカード" %><br>
  <%= f.radio_button :payment, "transfer" %>
  <%= f.label :payment_transfer, "銀行振込" %><br>


  <strong>お届け先</strong>
  <p><%= f.radio_button :address_radio_button, 0 %>
  <%= f.label :address_my_home, "ご自身の住所" %></p>
  <p>〒<%= @customers.postal_code %> <%= @customers.address %></p>
  <%= @customers.last_name %> <%= @customers.first_name %>

<p></p>
  <%= f.radio_button :address_radio_button, 1 %>
  <%= f.label :address_registered_address, "登録済住所からの選択" %>
  <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :address_display) %>
