<!DOCTYPE html>
<html>
  <head class="shadow-sm">
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <div class="container">
          <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <% if admin_signed_in? %>
                    <li class="nav-item">
                      <%= link_to "商品一覧", admin_items_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
                    </li>
                  <% else if customer_signed_in? %>
                    <li class="nav-item">
                      <%= link_to "マイページ", public_customers_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "商品一覧", public_items_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "カート", public_cart_items_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "顧客ログアウト", destroy_customer_session_path, method: :delete, class: 'btn btn-outline-secondary' %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to "About", public_about_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "商品一覧", public_items_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-outline-secondary' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to "ログイン", new_customer_session_path, class: 'btn btn-outline-secondary' %>
                    </li>
                  <% end %>
                </ul>
                <% end %>
                </ul>
              </div>
            </div>
          </nav>
        <a class="navbar-brand p-3" href="/">
          <%= link_to root_path do %>
            <%= image_tag 'banner07.png' %>
        </a>
          <% end %>
      </div>
    </header>
  </body>

      <%= yield %>
  <footer>
    <div class="container">
    </div>
  </footer>
</html>
