<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <header>
    <% if admin_signed_in? %>
      <li>
        <%= link_to "商品一覧", admin_items_path %>
      </li>
      <li>
        <%= link_to "会員一覧", admin_customers_path %>
      </li>
      <li>
        <%= link_to "注文履歴一覧", admin_path %>
      </li>
      <il>
        <%= link_to "ジャンル一覧", admin_genres_path %>
      </li>
      <li>
        <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
      </li>
    <% else if customer_signed_in? %>
      <li>
        <%= link_to "マイページ", public_customers_path %>
      </li>
      <li>
        <%= link_to "商品一覧", public_items_path %>
      </li>
      <li>
        <%= link_to "カート", public_cart_items_path %>
      </il>
      <li>
        <%= link_to "顧客ログアウト", destroy_customer_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "About", public_about_path %>
      </li>
      <li>
        <%= link_to "商品一覧", public_items_path %>
      </li>
      <li>
        <%= link_to "新規登録", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "ログイン", new_customer_session_path %>
      </li>
    <% end %>

    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
